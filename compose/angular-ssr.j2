version: '3.8'
services:

  {{service_name}}:
    image: {{ image_name }}
    container_name: {{ container_name }}
    build: ./
    restart: always

    ports:
      - "{{port_host}}:{{port_container}}"
    networks:
      - {{network_name}}

networks:
  {{network_name}}:
    name: {{network_name}}
    driver: bridge
